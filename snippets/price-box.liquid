 <div class="price-box">
	{% for collection in product.collections %}
    	{% if collection.title == 'Open Editions' %}
      		View Product
        {%else%}
        	{% include 'saw_compute_discount' with product %}
    		{% if saw_has_discount == false or saw_product_price >= saw_product_compare_at_price %}
				{% if lable_sale %}
					<p class="sale">
          				<span class="special-price">{% if product.price_varies %}<em>{{'typo_product.from' | t}} </em>{% endif %}{{ product.price_min | money }}</span>
          				<span class="old-price"> {{ product.compare_at_price_min | money }}</span>
					</p>
				{% else %}
					<p class="regular-product">
						<span >{% if product.price_varies %}<em>{{'typo_product.from' | t}} </em>{% endif %}{{ product.price_min | money }}</span>
					</p>
				{% endif %}
			{% else %}        
				<p class="sale">
					<span class="special-price">{% if product.price_varies %}<em>{{'typo_product.from' | t}} </em>{% endif %}
					{{ saw_product_price | money }}</span>
					<span class="old-price"> {{ saw_product_compare_at_price | money }}</span>
				</p>              
			{% endif %}
    	{% endif %}
  	{% endfor %}   
</div>